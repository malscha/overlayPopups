{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Overlay Configuration",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration schema version"
    },
    "settings": {
      "type": "object",
      "properties": {
        "defaultOpacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Default opacity for all cards"
        },
        "ignoreMouse": {
          "type": "boolean",
          "description": "Whether to ignore mouse events by default"
        },
        "snapToEdges": {
          "type": "boolean",
          "description": "Whether to snap cards to edges"
        },
        "gridSize": {
          "type": "integer",
          "minimum": 1,
          "description": "Grid size for snapping"
        }
      }
    },
    "cards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["text", "image"]
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "width": {
            "type": "number"
          },
          "height": {
            "type": "number"
          },
          "opacity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "rotation": {
            "type": "number"
          },
          "zIndex": {
            "type": "integer"
          },
          "font": {
            "type": "object",
            "properties": {
              "family": {
                "type": "string"
              },
              "size": {
                "type": "number"
              },
              "weight": {
                "type": "string"
              }
            }
          },
          "foregroundColor": {
            "type": "string"
          },
          "outlineColor": {
            "type": "string"
          },
          "imagePath": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        },
        "required": ["id", "type"]
      }
    },
    "scenes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "cards": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "name", "cards"]
      }
    }
  }
}